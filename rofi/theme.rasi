/* Global defaults */
* {
  font: "JetBrainsMono Nerd Font 11";
  blur: true;
  padding: 10px;
  background-color: transparent;
  border-radius: 0px;  // remove default rounding globally
}

/* ── Window ──────────────────────────────── */
window {
  fullscreen: true;
  width: 100%;
  height: 100%;
  border: 0;
  padding: 0;
}

/* ── Layout ──────────────────────────────── */
mainbox {
  position: center;
  orientation: vertical;
  children: [ "borderbox" ];
  spacing: 0px;
  padding: 0px;
  expand: true;          /* fill screen */
  halign: center;        /* horizontal center */
  valign: center;        /* vertical center */
  margin: 400px 655px 300px 655px;
}

borderbox {
  orientation: horizontal;
  children: [ "contentbox" ];
  padding: 0px;
  spacing: 0px;
  expand: false;         /* don’t stretch, just hold contentbox */
  halign: center;
  valign: center;
}

contentbox {
  width: 1250px;
  height: 725px;
  orientation: vertical;
  children: [ "entry", "listview" ];
  spacing: 0px;
  padding: 0px;
  expand: false;         /* fixed size */
  background-color: rgba(46,52,64,1.0);
  border-radius: 12px;
  border: 2px;
  border-color: #222;
}

/* Make sure children don't force the contentbox to expand */
entry {
  expand: false;
}

/* ── Elements ────────────────────────────── */
element {
  border-radius: 8px;
  padding: 20px 10px;
  text-align: center;
  orientation: vertical;        // Stack icon and text vertically
  children: [ "element-icon", "element-text" ]; // Ensure icon is above text
}

element-icon {
  size: 3em;
  text-align: center;
  margin: 0;
}

element-text {
  font-size: 14px;     
  vertical-align: 0.5;
  horizontal-align: 0.5;
  margin: 0;
  padding: 4px 0 0 0;
  spacing: 0;
  text-color: #fab387ff;
}

element selected {
  background-color: #8eacc896;
  text-color: #e5c07b;
  border-radius: 8px;
}

/* ── Input & Prompt ──────────────────────── */
prompt {
  enabled: false;
  background-color: transparent;
  text-color: #fab387;
  padding: 5px 10px;
}

entry {
  placeholder: "Search for apps";
  padding: 10px;
  expand: false;
  font: "JetBrainsMono Nerd Font 16";
  text-color: #fab387;
  border-radius: 0px 3px 0px 0px;
  background-color: #292e36;  // input field
}

/* ── Listview ────────────────────────────── */
listview {
  lines: 4;           // Number of rows
  columns: 5;         // Number of columns (adjust as needed)
  background-color: rgba(46, 52, 64, 0.8);
  border-radius: 0px 0px 3px 0px;
  padding: 5px;
  spacing: 20px;      // Space between icons
  expand: false;      // prevent the list from filling the remaining height
}
